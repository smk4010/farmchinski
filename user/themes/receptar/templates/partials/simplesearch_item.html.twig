{% set banner = page.media.images|first %}
<article id="post-{{ loop.index }}" class="post-{{ loop.index }} post type-post status-publish format-standard has-post-thumbnail hentry category-cakes tag-no-excerpt">

   <div class="entry-media">
      <figure class="post-thumbnail" itemprop="image">

        <a href="{{ page.url }}">
          {% if banner %}
            {{ banner.cropZoom(480,640).html('','', 'attachment-thumbnail size-thumbnail wp-post-image') }}
          {% else %}
            <img class="attachment-thumbnail size-thumbnail wp-post-image" src="{{ theme_url }}/images/{{ site.global_featured_image }}">
          {% endif %}
        </a>

      </figure>
   </div>

   <div class="entry-inner">
      <div class="entry-inner-content">
         <header class="entry-header">
            <h1 class="entry-title" itemprop="name"><a href="{{ page.url }}">{{ page.title }}</a></h1>
         </header>
         <div class="entry-content" itemprop="description">
            <p class="post-excerpt">{{ page.summary }}</p>
         </div>
      </div>
   </div>
</article>
